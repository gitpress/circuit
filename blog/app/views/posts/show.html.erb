<p id="notice"><%= notice %></p>

<h2><%= @post.title %></h2>

<p><%= @post.body %></p>

<p>Post by: <%= @post.author %></p>

<h3>Comments</h3>

<%= render @post.comments %>

<h3>Add your voice!</h3>

<%= form_for [@post, @post.comments.build] do |f| %>
  <div class='field'>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email%>
  </div>
  <div class='field'>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class='actions'>
    <%= f.submit %>
  </div>
 <% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
